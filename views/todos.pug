doctype html
html
  head
    title Todos List
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    )

  body.bg-dark.text-light
    .container.mt-5
      h2.text-center.mb-4 My Todos

      each todo in todos
        .card.mb-3.shadow.bg-secondary
          .card-body
            h5.card-title #{todo.title}

            p
              strong Status:
              span.badge.bg-warning.text-dark.ms-2 #{todo.status}

            p
              strong Created At:
              br
              small #{new Date(todo.timestamp).toLocaleString()}

            p.text-muted
              small ID: #{todo._id}
